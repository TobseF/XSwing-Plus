<?xml version="1.0" encoding="UTF-8"?>
<nifty>

  <!-- +++++++++++++++++++++++++++++++++++++++ -->
  <!-- register effects we want to use -->
  <!-- +++++++++++++++++++++++++++++++++++++++ -->
  <registerEffect name="move" class="de.lessvoid.nifty.effects.general.Move" />
  <registerEffect name="pulsateHover" class="de.lessvoid.nifty.effects.hover.Pulsate" />
  
  <!-- +++++++++++++++++++++++++++++++++++++++ -->
  <!-- start screen -->
  <!-- +++++++++++++++++++++++++++++++++++++++ -->
  <screen id="start" controller="tests.MyScreenController">
    <layer id="layer" backgroundColor="#003f" childLayout="center">
      <panel id="panel" height="70%" width="40%" align="center" valign="center" backgroundColor="#f60f" childLayout="center" visibleToMouse="true">
        <interact onClick="StartXSwing()"/>
        <effect>
          <onStartScreen name="move" mode="in" direction="top" length="300" startDelay="0" inherit="true"/>
          <onEndScreen name="move" mode="out" direction="bottom" length="300" startDelay="0" inherit="true"/>
          <onHover name="pulsateHover" scaleFactor="0.008" startColor="#f600" endColor="#ffff" post="true"/>
        </effect>
        <text id="text" font="menu.fnt" text="Start Swing!" align="center" valign="center" />
        <image filename="res/plus.png" valign="center" align="center"></image>
      </panel>
    </layer>
  </screen>
</nifty>
