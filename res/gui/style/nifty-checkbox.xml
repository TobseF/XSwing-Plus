<?xml version="1.0" encoding="UTF-8"?>
<nifty-styles>
  <style id="nifty-checkbox-style#panel">
    <attributes width="28px" height="28px" childLayout="center"/>
    <effect>
      <onHover name="imageOverlay" post="true" filename="res/gui/style/field-hover.png" imageMode="resize:6,30,6,6,6,30,6,30,6,30,6,6" inset="-5px" />
      <onFocus name="imageOverlay" post="true" filename="res/gui/style/field-hover.png" imageMode="resize:6,30,6,6,6,30,6,30,6,30,6,6" inset="-5px" />
      <onActive name="imageOverlay" post="false" filename="res/gui/style/field.png" imageMode="resize:1,30,1,1,1,30,1,30,1,30,1,1" />
    </effect>
  </style>
  
  <style id="nifty-checkbox-style#select">
    <effect overlay="true">
      <onShow name="imageSize" startSize="2.0" endSize="1.0" length="250" />
      <onShow name="fade" start="#0" end="#f" length="250" />
      <onHide name="fade" start="#f" end="#0" length="250" />
      <onActive name="imageOverlay" filename="res/gui/style/checkbox.png" width="28px" height="28px" inset="-7px" />
    </effect>
  </style>
</nifty-styles>
