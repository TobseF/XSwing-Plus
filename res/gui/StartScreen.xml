<?xml version="1.0" encoding="UTF-8"?>
<nifty xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="nifty.xsd">
  <!-- +++++++++++++++++++++++++++++++++++++++ -->
  <!-- load styles -->
  <!-- +++++++++++++++++++++++++++++++++++++++ -->
  <useStyles filename="res/gui/my-default-styles.xml" />
  <useControls filename="res/gui/my-default-controls.xml" />


  <!-- main menu style -->
  <style id="menu">
    <attributes childLayout="vertical" align="center" valign="center" height="50%"/>
    <effect>
      <onStartScreen name="hide" length="500" inherit="true" startDelay="1000"/>
      <onStartScreen name="fade" startColor="#fff0" endColor="#ffff" length="1000" startDelay="500" inherit="true"/>
      <onEndScreen name="fade" startColor="#ffff" endColor="#fff0" length="500" inherit="true"/>
    </effect>
  </style>

  <!-- menu item style -->
  <style id="menu-item">
    <attributes align="center"/>
    <hover width="200%" falloffConstraint="horizontal"/>
    <effect>
      <onHover name="hoverFocus" />
      <onHover name="hoverHint" targetElement="hintElement" hintText="$hintText" />
      <onFocus name="pulsate" hoverWidth="100%" width="100%" period="500" startColor="#3c000000" endColor="#ff7c00ff" timeType="infinite" cycle="false"/>
    </effect>
  </style>

  <!-- glowing text -->
  <style id="glowText">
    <effect>
      <onHover name="hoverSaveState" />
      <onHover name="hoverChangeFont" font="verdana-24-glow.fnt" post="false" inherit="false"/>
      <onHover name="hoverColorPulsate" startColor="#0000" endColor="#000f" post="false" inherit="false"/>
      <onHover name="hoverRenderElement" />
      <onHover name="hoverRestoreState" />
    </effect>
  </style>

  <style id="text-only-button#panel">
    <attributes align="center" childLayout="center" visibleToMouse="true" />
  </style>
  <style id="text-only-button#text">
    <attributes font="verdana-24-shadow.fnt" align="center" valign="center" textHAlign="center" textVAlign="center" visibleToMouse="true"/>
    <effect>
      <onHover name="hoverSaveState" />
      <onHover name="hoverChangeFont" font="verdana-24-glow.fnt" post="false" inherit="false"/>
      <onHover name="hoverColorPulsate" startColor="#0000" endColor="#000f" post="false" inherit="false"/>
      <onHover name="hoverRenderElement" />
      <onHover name="hoverRestoreState" />

      <onFocus timeType="infinite" name="saveState" />
      <onFocus timeType="infinite" name="changeFont" font="verdana-24-glow.fnt" post="false" inherit="false"/>
      <onFocus timeType="infinite" name="colorPulsate" startColor="#0000" endColor="#000f" post="false" inherit="false"/>
      <onFocus timeType="infinite" name="renderElement" />
      <onFocus timeType="infinite" name="restoreState" />
    </effect>
  </style>



  <!-- +++++++++++++++++++++++++++++++++++++++ -->
  <!-- menu screen -->
  <!-- +++++++++++++++++++++++++++++++++++++++ -->
  <screen id="start" controller="xswing.gui.XSwingScreenController">
    <layer id="top" childLayout="vertical" backgroundColor="#393939ff">
      <effect>
        <onStartScreen name="fade" startColor="#0000" endColor="#393939ff" length="500"/>
        <onEndScreen name="fade" startColor="#393939ff" endColor="#00000000" length="500"/>
      </effect>
      <panel id="panel" height="30%" childLayout="center">
        <image id="image" filename="res/xswing.png" align="center">
          <effect>
            <onEndScreen name="fade" startColor="#ffff" endColor="#0000" length="500" />
          </effect>
        </image>
      </panel>
    </layer>
    <layer id="menu" childLayout="vertical">
      <panel height="30%" childLayout="center"/>
      <panel height="50%" childLayout="center">
        <menu id="mainMenu" font="res/menu.fnt" style="menu">
          <menuItem id="startSinglePlayer" text="Singe Player" style="menu-item" hintText="Start the XSwing Plus singleplayer game!" focusable="true">
            <interact onClick="startSingleplayer()"/>
          </menuItem>
          <menuItem id="startMultiplayer" text="Multiplayer" style="menu-item" hintText="Start the XSwing Plus multiplayer game!" focusable="true">
            <interact onClick="startMultiplayer()"/>
          </menuItem>
          <menuItem id="tutorial" text="Tutorial" style="menu-item" hintText="View the Tutorials stages" focusable="true">
            <interact onClick="textAlign()"/>
          </menuItem>
          <menuItem id="options" text="Options" style="menu-item" hintText="Make Options" focusable="true">
            <interact onClick="textField()"/>
          </menuItem>
          <menuItem id="credits" text="Credits" hintText="View Credits" style="menu-item" focusable="true">
            <interact onClick="multiplayer()"/>
          </menuItem>
          <menuItem id="exit" text="Exit" style="menu-item" hintText="Exit Game" focusable="true">
            <interact onClick="exitXSwing()"/>
          </menuItem>
        </menu>
      </panel>
      <panel id="hintArea" childLayout="center" align="center" valign="center" height="20%">
        <effect>
          <onStartScreen name="fade" startColor="#0000" endColor="#000f" length="500" inherit="true" />
          <onEndScreen name="fade" startColor="#000f" endColor="#0000" length="500" inherit="true" />
        </effect>
        <text id="hintElement" text="Welcome to Nifty Examples" font="verdana-24-shadow.fnt" align="center" valign="center"/>
      </panel>
    </layer>
    <layer id="example" childLayout="absolute">
      <image x="550px" y="140px" filename="res/plus.png" align="center">
        <effect>
          <onStartScreen name="move" direction="right" mode="in" length="800" />
          <onStartScreen name="fade" startColor="#0000" endColor="#ffff" length="800" />
          <onEndScreen name="move" direction="right" mode="out" length="800" />
          <onEndScreen name="fade" startColor="#ffff" endColor="#0000" length="800" />
        </effect>
      </image>
    </layer>
     <layer id="versionInfo" childLayout="vertical">
         <label id="version" height="100%" width="98%" text="v0.344" textHAlign="left" textVAlign="bottom"/>
    </layer>
  </screen>
  
</nifty>