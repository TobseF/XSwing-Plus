<?xml version="1.0" encoding="UTF-8"?>
<nifty>

	<!-- +++++++++++++++++++++++++++++++++++++++ -->
	<!-- load default styles and controls -->
	<!-- +++++++++++++++++++++++++++++++++++++++ -->
	<useStyles filename="nifty-default-styles.xml" />
	<useControls filename="nifty-default-controls.xml" />

	<!--<registerSound id="popup" filename="sound/34556__Corsica_S__reverse_bass_blip_2.wav" />	-->
	
	<registerSound id="popup" filename="restest/BubblePo-Benjamin-8.wav" />
	<registerSound id="click" filename="restest/Pop-J_Fairba-1725.wav" />

	<!-- +++++++++++++++++++++++++++++++++++++++ -->
	<!-- register effects we want to use -->
	<!-- +++++++++++++++++++++++++++++++++++++++ -->
	<registerEffect name="move" class="de.lessvoid.nifty.effects.impl.Move" />
	<registerEffect name="myChangeFont" class="lib.mylib.hacks.MyChangeFont" />


	<!-- Spacer between the buttons-->
	<style id="my-spacer">
		<attributes height="12px" />
	</style>

	<!-- style for the button panel-->
	<style id="my-button#panel">
		<attributes backgroundImage="restest/main_menu_button.png" imageMode="resize:20,270,22,18,20,270,22,39,20,270,22,20"
			width="362px" height="77px" childLayout="center" visibleToMouse="true" align="center"
			focusable="true" />
		<effect>
			<onHover name="focus" />
			<onFocus name="imageOverlay" filename="restest/button-main-menu_hoover.png"
				imageMode="resize:20,270,22,18,20,270,22,39,20,270,22,20" post="true" inset="-2px" />
			<onFocus name="playSound" sound="popup" />
			<onClick name="playSound" sound="click" />
			<onFocus name="imageSize" startSize="1.0" endSize="1.04" length="40" />
			<onLostFocus name="imageSize" startSize="1.04" endSize="1" length="400" />
		</effect>
	</style>

	<!-- style for the button text -->
	<style id="my-button#text">
		<attributes font="restest/berlin_sans_sb_45_bw.fnt" align="center" valign="center"
			textHAlign="center" textVAlign="center" visibleToMouse="true" />
		<effect>
			<!--  <onFocus name="textSize" startSize="1.0" endSize="1.06" length="150" /> -->
			<onFocus name="myChangeFont" font="restest/berlin_sans_sb_45_bw_hover.fnt"></onFocus>
			<onHover name="myChangeFont" font="restest/berlin_sans_sb_45_bw_hover.fnt"></onHover>
		</effect>
	</style>


	<!-- +++++++++++++++++++++++++++++++++++++++ -->
	<!-- start screen -->
	<!-- +++++++++++++++++++++++++++++++++++++++ -->
	<screen id="start" controller="xswing.gui.XSwingScreenController">

		<!-- Background -->
		<layer id="background_image" backgroundImage="restest/main_menu_background.jpg"
			childLayout="center">
		</layer>

		<!-- Logo: XSwing -->
		<layer id="logo_xswing" childLayout="vertical">
			<panel childLayout="vertical" align="center" valign="center" width="20%">
				<panel childLayout="horizontal" height="20px" />
				<image filename="res/xswing.png" align="center">
					<effect>
						<onStartScreen name="move" timeType="exp" factor="3.5" direction="top"
							mode="in" length="600" startDelay="50" />
					</effect>
				</image>
			</panel>
		</layer>

		<!-- Logo: Plus -->
		<layer id="logo_plus" childLayout="absolute">
			<image x="568px" y="120px" filename="res/plus.png">
				<effect>
					<onStartScreen name="imageSize" startSize="2" endSize="1.0" length="250"
						startDelay="600" />
					<onStartScreen name="fade" start="#0" end="#f" length="250" startDelay="600" />
				</effect>
			</image>
		</layer>


		<!-- Logo: XSwing -->
		<layer id="main_menu" childLayout="vertical">
			<panel childLayout="vertical" align="center" valign="center" width="40%">
				<panel childLayout="horizontal" height="300px" />
				<panel height="300px" childLayout="vertical">
					<control style="my-button" id="startSinglePlayer" name="button" label="Singleplayer">
						<interact onClick="startSingleplayer()" />
					</control>
					<panel style="my-spacer" />
					<control style="my-button" id="startMultiplayer" name="button" label="Multiplayer">
						<interact onClick="startMultiplayer()" />
					</control>
					<panel style="my-spacer" />
					<control style="my-button" id="options" name="button" label="Options">
						<interact onClick="XXXX()" />
					</control>
					<panel style="my-spacer" />
					<control style="my-button" id="credits" name="button" label="Credits">
						<interact onClick="XXXX()" />
					</control>
					<panel style="my-spacer" />
					<control style="my-button" id="exit" name="button" label="Exit">
						<interact onClick="exitXSwing()" />
					</control>
				</panel>
			</panel>
		</layer>

		<!-- Label: Game Version -->
		<layer id="version" childLayout="absolute">
			<label font="res/arial_bold_black_24.fnt" id="version_label" x="20px" y="718px"
				text="v0.35" color="#0E131Cff" hintText="Game Version">
			</label>
		</layer>

	</screen>
</nifty>