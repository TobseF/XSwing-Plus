<?xml version="1.0" encoding="UTF-8"?>
<nifty>

  <!-- +++++++++++++++++++++++++++++++++++++++ -->
  <!-- load default styles and controls -->
  <!-- +++++++++++++++++++++++++++++++++++++++ -->
  <useStyles filename="res/gui/my-default-styles.xml" />
  <useControls filename="res/gui/my-default-controls.xml" />


  <!-- +++++++++++++++++++++++++++++++++++++++ -->
  <!-- start screen -->
  <!-- +++++++++++++++++++++++++++++++++++++++  -->
  
  <screen id="start" controller="xswing.gui.ScoreScreenController">
    <layer id="layer" childLayout="center">
      <effect>
        <onStartScreen name="fade" startColor="#0000" endColor="#000f" length="500" startDelay="0" inherit="true"/>
        <onEndScreen name="fade" startColor="#000f" endColor="#0000" length="500" startDelay="0" inherit="true"/>
      </effect>
      <panel id="dialog" style="nifty-panel" childLayout="center" width="80%" height="25%" align="center" valign="center">
        <effect>
        </effect>
        <panel childLayout="vertical" width="95%" height="80%" align="center" valign="center">
          <panel id="namePanel" childLayout="horizontal">
            <label id="labelScore" text="Your Score: " width="200px" align="left" textVAlign="center" textHAlign="left"/>
          </panel>    
          <panel childLayout="horizontal" height="4px" />
          <panel childLayout="horizontal" height="40px">
            <label text="Your Name: " width="200px" align="left" textVAlign="center" textHAlign="left"/>
            <control id="name" name="textfield" />
          </panel>
          <panel height="16px" />
          <panel childLayout="horizontal">
            <panel width="*" />
            <control id="backButton" name="button" label="Press Enter" align="right">
            	<interact onClick="enterHighScore()"/>
            </control>
          </panel>
        </panel>
      </panel>
	  
    </layer>
	 <layer  childLayout="center">
	  <panel childLayout="vertical" width="80%" height="50%" align="center" valign="center">
			<text id="game_over" text="Game Over" font="res/menu.fnt" align="center" valign="center"/>
		</panel>
	</layer>
  </screen>
</nifty>